# Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE
# ==========================================
# For docker-compose, this is auto-configured
# For separate deployments, use your RDS or managed PostgreSQL URL
# DATABASE_URL=postgresql://username:password@host:5432/database

# ==========================================
# AUTHENTICATION (Better Auth)
# ==========================================
# Generate a secure random string (at least 32 characters)
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-chars-recommended

# Backend URL (where your API is hosted)
BETTER_AUTH_URL=http://localhost:3000

# ==========================================
# EMAIL (Resend)
# ==========================================
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_resend_api_key_here

# ==========================================
# AWS S3 STORAGE
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your-bucket-name

# ==========================================
# LIVEKIT (Streaming)
# ==========================================
# Get these from your LiveKit Cloud dashboard
# Or self-host LiveKit server
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
# Frontend URL for CORS (Backend needs this)
FRONTEND_URL=http://localhost

# API URL (Frontend needs this)
VITE_API_URL=http://localhost:3000

# LiveKit WebSocket URL (Frontend needs this)
VITE_LIVEKIT_WS_URL=wss://your-livekit-server.livekit.cloud

# Better Auth URL (Frontend needs this) - Usually same as backend
VITE_BETTER_AUTH_URL=http://localhost:3000

# ==========================================
# DEPLOYMENT SPECIFIC
# ==========================================
# Set to production for deployed environments
NODE_ENV=production

# Port for backend (optional, defaults to 3000)
PORT=3000
